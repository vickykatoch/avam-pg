{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ],
    "paths": {
      "@avam-grid/*" : [
        "modules/core/avam-grid/*"
      ],
      "@avam-logger/*" : [
        "modules/core/avam-logger/*"
      ]
    }
  }
}
